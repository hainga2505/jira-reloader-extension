{
  "manifest_version": 3,
  "name": "My Jira Reloader",
  "version": "1.0",
  "description": "Tự động làm mới tab Jira Dashboard.",
  "permissions": [
    "alarms",
    "tabs",
    "storage" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
