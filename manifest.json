{
  "manifest_version": 3,
  "name": "Auto Tab Reloader",
  "version": "1.0",
  "description": "Automatically reloads browser tabs at a given interval.",
  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
